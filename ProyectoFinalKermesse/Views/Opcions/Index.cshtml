@model IEnumerable<ProyectoFinalKermesse.Models.Opcion>

@{
    ViewBag.Title = "Tabla Opcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestión de tablas", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Tabla Opción", "Index", "Opcions", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
    </ol>
</div>

<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/fonts/BannersKermesse/13.png" alt="Banner 13">

    </div>

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.opcionDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.opcionDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idOpcion }, new { @style = "color: #779FA1" })
                <span class="glyphicon glyphicon-edit" aria-hidden="true" style="float: left; color: #779FA1"></span>|
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true" style="color: #779FA1"></span>
                @Html.ActionLink("Detalles", "Details", new { id = item.idOpcion }, new { @style = "color: #779FA1" }) |
                <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: #779FA1"></span>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idOpcion }, new { @style = "color: #779FA1" })
            </td>
        </tr>
    }

</table>
<hr />

<p>
    <button type="button" class="btn-lg" style="border-block-color: #779FA1; background-color: #779FA1">
        @Html.ActionLink("Agregar nuevo", "Create", "Opcions", new { @style = "color:white;" })
        <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left;  color: white"></span>
    </button>
</p>
