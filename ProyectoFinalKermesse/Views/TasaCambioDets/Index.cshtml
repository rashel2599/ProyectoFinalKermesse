@model IEnumerable<ProyectoFinalKermesse.Models.TasaCambioDet>

@{
    ViewBag.Title = "Tabla Detalle de Tasa de Cambio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestiones", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li class="active"> @Html.ActionLink("Detalle de Tasa de Cambio", "Index", "TasaCambioDets", new { area = "" }, new { @style = "color: #779FA1" })  </li>
    </ol>
</div>


<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/fonts/BannersKermesse/7.png" alt="Banner 7">

    </div>

</div>
<div class="container">

    <hr />

    @using (Html.BeginForm())
    {
        <div class="container">
            <p>
                Buscar por Estado: @Html.TextBox("valorB")
                <input type="submit" value="Buscar" style="background-color: #779FA1; color: #FFFFFF; font-weight:bold" />
            </p>
        </div>

    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoCambio)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TasaCambio1.mes)

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoCambio)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.tasaCambio)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idTasaCambioDet }, new { @style = "color: #779FA1" })
                    <span class="glyphicon glyphicon-edit" aria-hidden="true" style="float: left; color: #779FA1"></span>|
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true" style="color: #779FA1"></span>
                    @Html.ActionLink("Detalles", "Details", new { id = item.idTasaCambioDet }, new { @style = "color: #779FA1" }) |
                    <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: #779FA1"></span>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idTasaCambioDet }, new { @style = "color: #779FA1" })
                </td>
            </tr>
        }

        <p>
            <button type="button" class="btn-lg" style="border-block-color: #779FA1; background-color: #779FA1">
                @Html.ActionLink("Agregar nuevo", "Create", "TasaCambioDets", new { @style = "color:white;" })
                <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left;  color: white"></span>
            </button>
        </p>

    </table>

</div> 
